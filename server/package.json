{
  "name": "harmoni_server",
  "version": "1.0.0",
  "description": "server for harmoni",
  "main": "lib/server.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon --exec babel-node src/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "flow": "flow",
    "build": "babel src/ -d lib/",
    "prepublish": "npm run build",
    "flow-coverage": "flow-coverage-report"
  },
  "flow-coverage-report": {
    "includeGlob": [
      "src/*.js",
      "src/**/*.js"
    ],
    "type": [
      "text",
      "html",
      "json"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "formidable": "^1.2.1",
    "fs": "0.0.1-security",
    "generate-password": "^1.4.2",
    "jsonwebtoken": "^8.3.0",
    "mysql": "^2.17.1",
    "nodemailer": "^6.4.2"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-flow": "^7.7.4",
    "discord.js": "^11.5.1",
    "flow-bin": "^0.115.0",
    "flow-coverage-report": "^0.6.1",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2"
  }
}
